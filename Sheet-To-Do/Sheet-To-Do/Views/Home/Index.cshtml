@model IEnumerable<Sheet_To_Do.Models.Task>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @using (Html.BeginForm("Create", "Home", FormMethod.Post))
    {
    <p>
        @Html.TextBox("NewTaskText")
        <input class="btn btn-default" type="submit" value="Add" />
    </p>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Done)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if(item.Done) {@Html.ActionLink("Done", "ChangeState", new { id = item.Id })}
            @if (!item.Done){@Html.ActionLink("Not Done", "ChangeState", new { id = item.Id })}

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Archive", "Archive", new { id=item.Id })
        </td>
    </tr>
}

</table>
